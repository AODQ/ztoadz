function! MakeprgRelease()
  let &makeprg = 'zig build test -DsupportsOpenCL=true -DsupportsVulkan=false'
  make
endfunction

function! MakeprgVulkan()
  let &makeprg = 'zig build test -DsupportsOpenCL=false -DsupportsVulkan=true'
  make
endfunction

function! MakeprgReleaseDispatch()
  let &makeprg = 'zig build'
  Make
endfunction

let g:zig_fmt_autosave = 0
